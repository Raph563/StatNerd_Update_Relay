{
  "name": "statnerd-relay",
  "version": "1.1.0-alpha.2",
  "private": true,
  "description": "StatNerd desktop relay with tray and installer UI",
  "main": "src/main.js",
  "bin": {
    "statnerd-relay": "src/server.js"
  },
  "scripts": {
    "start": "electron .",
    "start:server": "node src/server.js",
    "build:win": "electron-builder --win nsis portable",
    "build:mac": "electron-builder --mac dmg zip"
  },
  "build": {
    "appId": "com.statnerd.relay",
    "productName": "StatNerd Relay",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "README.md",
      "CHANGELOG.md"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    }
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  }
}

