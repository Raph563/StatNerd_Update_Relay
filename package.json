{
  "name": "statnerd-relay",
  "version": "1.0.0",
  "private": true,
  "description": "Desktop relay for StatNerd one-click addon updates",
  "bin": {
    "statnerd-relay": "src/server.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "build:pkg": "pkg src/server.js --targets node20-win-x64,node20-macos-x64,node20-macos-arm64 --out-path dist"
  },
  "pkg": {
    "outputPath": "dist",
    "targets": [
      "node20-win-x64",
      "node20-macos-x64",
      "node20-macos-arm64"
    ]
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
